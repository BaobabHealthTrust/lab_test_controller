                                                <% test_name =  d['test_name'] %>
                                                <% test_name = test_name.gsub("&",'**') %>  
                                                                                     
                                                <tr onclick="window.location='/order/enter_result_value?tracking_number=' + '<%= tracking_number %>' + '&test_name=' + '<%= test_name %>' + '&identifier=' + '<%= @identifier %>'">
